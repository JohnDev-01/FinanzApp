<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="FinanzApp.Views.Menu.Views.Container"
            xmlns:home="clr-namespace:FinanzApp.Views.Menu.Views"
            xmlns:category="clr-namespace:FinanzApp.Views.Category.View"
            xmlns:transaction="clr-namespace:FinanzApp.Views.Transactions.View"
            Title="Contenedor"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            android:TabbedPage.ToolbarPlacement="Bottom"
            BarBackgroundColor="#261A40"
            BarTextColor="White"
            UnselectedTabColor="White"
            SelectedTabColor="{DynamicResource PrimaryColor}"
            NavigationPage.HasNavigationBar="False"
            >
    <home:Home Title="Inicio"
               IconImageSource="home.png" />
    <transaction:Transaction Title="Transacciones"
                             IconImageSource="transaction.png" />
    <category:CategoryAdministrator Title="Categorias"
                                    IconImageSource="category.png" 
                                   />
</TabbedPage>